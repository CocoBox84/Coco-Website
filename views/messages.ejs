        })
        .then(res => res.json())
        .then((data) => {
          console.log(data.message)
        })
        .catch(err => console.error("Error marking message:", err));
    }

    function deleteMessage(messageId) {
      fetch(`/api/messages/delete/${messageId}`, {
          method: "POST"
        })
        .then(res => res.json())
